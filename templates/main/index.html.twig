{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h2>Panier</h2>
                <table class="table table-dark">

                    <thead>
                        <tr>
                            <th scope="col">Produit</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Montant</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                    <tr>
                        <th>{{ article.produit.nom }}</th>
                        <td>{{ article.quantite }}</td>
                        <td>{{article.produit.prix * article.quantite}} €</td>
                        <td><a href="{{ path('removePanier', {id : article.id})}}"><button class="btn btn-danger">Supprimer</button></a></td>
                    </tr>
                    {% endfor %}
                    <tr class="bg-primary">
                        <th>TOTAL : {{ articles|length }} produits</th>
                        <td></td>
                        <td>{{montantTotal}} €</td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
   <div class="container">
       <div class="jumbotron">
           <h2>Liste des produits</h2>
                {% for produit in produits %}
                <div class="card" style="width: 18rem;">
                    {% if produit.photo is not null %}
                        <img src="{{ asset('assets/images/' ~ produit.photo) }}" class="card-img-top" alt="Card-image tap"/>
                    {% endif %}
                   <div class="card-body">
                       <h5 class="card-title">{{ produit.nom }}</h5>
                   </div>
                   <ul class="list-group list-group-flush">
                       <li class="list-group-item">Quantit√© :{{ produit.quantite }}</li>
                       <li class="list-group-item">Prix :{{ produit.prix }}</li>
                   </ul>
                   <div class="card-body">
                       <a href="ficheProduit/{{ produit.id }}" class="card-link">Voir plus</a>
                   </div>
                </div>
                {% endfor %}
       </div>

       <div class="jumbotron">
           <h2>Ajouter un produit</h2>
           {{ form(formProduits) }}
       </div>
   </div>
{% endblock %}